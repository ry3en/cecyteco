= form_for(resource, as: resource_name, url: registration_path(resource_name)) do
  =devise_error_messages!
  .mdl-textfield.mdl-js-textfield--floating-label
    = f.email_field :email, autofocus: true,class:"mdl-textfield_input",required: true
    = f.label :email,class:"mdl-textfield_label gray-text"
  .mdl-textfield.mdl-js-textfield--floating-label
    = f.password_field :password, autofocus: true,class:"mdl-textfield_input"
    = f.label :password,class:"mdl-textfield_label gray-text"
  .mdl-textfield.mdl-js-textfield--floating-label
    = f.password_field :password_confirmation, autofocus: true,class:"mdl-textfield_input"
    = f.label :password_confirmation,class:"mdl-textfield_label grey text"
    .mdl-textfield.mdl-js-textfield--floating-label
      = f.text_field :username, autofocus: true,class:"mdl-textfield_input"
      = f.label :username,class:"mdl-textfield_label gray-text"
      .top-space
        .row.text-left.middle-xs
          =grid xs:12, md:6 do
            =f.submit "registrar", class:"mdl-button mdl-js-button mdl--raised mdl-button--colored"
            =grid xs:12, mdl:5 do
              =link_to "ya tengo cuenta",new_user_session_path,class:"white-text underlines"
